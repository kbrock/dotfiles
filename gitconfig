# use mac keychain for ssh passwords
[credential]
  helper = osxkeychain
[grep]
  lineNumber = true
[pull]
  ff = only
	rebase = true
[push]
  default = simple
#  default = current
[rebase]
  autosquash = true
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[color "diff"]
  whitespace = red reverse
#[format]
#  pretty = %C(cyan)>> %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[diff]
  algorithm = patience
